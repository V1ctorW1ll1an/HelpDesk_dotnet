<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - HelpDesk</title>
  <link rel="stylesheet" href="~/css/app.css" />
  <link href="https://cdn.jsdelivr.net/npm/phosphor-icons@1.4.2/src/css/icons.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/phosphor-icons@1.4.2/src/index.min.js"></script>
</head>

<body>
  <div class="w-full bg-gray-50 dark:bg-gray-900 min-h-screen flex flex-col">
    <header class="shadow-xl h-25 sm:h-20">
      <div class="flex px-10 py-5 items-center flex-wrap gap-3 justify-around sm:justify-between">
        <!-- logo -->
        <a href="/">
          <h1 class="font-bold text-center text-2xl text-gray-900 dark:text-gray-50 text-shadow-md">Help Desk</h1>
        </a>
        <!-- menu -->
        <a asp-controller="Login" asp-action="Logout"
          class=" hover:bg-gray-200 transition-all ease-in-out delay-500 dark:hover:bg-gray-500 border dark:border-gray-50 border-gray-800 rounded-md p-2  text-gray-800 dark:text-gray-50 flex items-center justify-center gap-3">
          Fazer logout
          <i class="ph ph-sign-out"></i>
        </a>
      </div>
    </header>

    @RenderBody()

    <footer class="h-22 py-4">
      <div class="container mx-auto px-4">
        <div class="flex justify-center items-center text-sm flex-wrap text-center gap-3">
          <p class="text-gray-700 dark:text-gray-400">Â© 2023 Victor Willian de Sousa. Todos os direitos reservados.</p>
        </div>
      </div>
    </footer>
  </div>

  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
