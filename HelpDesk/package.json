{
  "scripts": {
    "build": "cross-env NODE_ENV=development ./node_modules/tailwindcss/lib/cli.js -i ./Tailwind/tailwindConfig.css -o ./wwwroot/css/app.css",
    "watch": "cross-env NODE_ENV=development ./node_modules/tailwindcss/lib/cli.js -i ./Tailwind/tailwindConfig.css -o ./wwwroot/css/app.css --watch",
    "release": "cross-env NODE_ENV=production ./node_modules/tailwindcss/lib/cli.js -i ./Tailwind/tailwindConfig.css -o ./wwwroot/css/app.css --minify"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.3.2"
  }
}
